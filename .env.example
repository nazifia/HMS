# HMS Environment Configuration
# Copy this file to .env and update the values for your environment

# Security Settings
SECRET_KEY=your-very-long-and-random-secret-key-here-at-least-50-characters-long
DEBUG=False
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
ALLOWED_HOSTS=NazHMS.pythonanywhere.com

# Database Configuration
DB_ENGINE=django.db.backends.sqlite3  # Changed to SQLite for development
DB_NAME=db.sqlite3  # SQLite database file
# DB_USER=hms_user  # Not needed for SQLite
# DB_PASSWORD=your-secure-database-password  # Not needed for SQLite
# DB_HOST=localhost  # Not needed for SQLite
# DB_PORT=3306  # Not needed for SQLite

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Security Headers
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Hospital Information
HOSPITAL_NAME=Your Hospital Name
HOSPITAL_ADDRESS=Your Hospital Address
HOSPITAL_PHONE=Your Hospital Phone
HOSPITAL_EMAIL=info@yourhospital.com

# Cache Configuration (Redis)
CACHE_BACKEND=django_redis.cache.RedisCache
CACHE_LOCATION=redis://127.0.0.1:6379/1

# File Storage
MEDIA_ROOT=/path/to/media/files
STATIC_ROOT=/path/to/static/files

# Logging
LOG_LEVEL=INFO
LOG_FILE=/path/to/logs/hms.log

# Third-party API Keys
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Payment Gateway
PAYSTACK_PUBLIC_KEY=your-paystack-public-key
PAYSTACK_SECRET_KEY=your-paystack-secret-key

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
